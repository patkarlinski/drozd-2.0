        <input
          type="hidden"
          name="subject"
          value="Nowe zapytanie ze strony DrozdSkup!"
        />
        <input
          type="checkbox"
          name="botcheck"
          class="hidden"
          style="display: none;"
        />

        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-bold text-[#002333] mb-2"
              >Imi / Firma</label
            >
            <input
              type="text"
              name="name"
              required
              class="w-full px-5 py-4 rounded-xl border-2 border-gray-200 focus:border-[#159A9C] focus:outline-none transition-colors bg-white"
            />
          </div>
          <div>
            <label class="block text-sm font-bold text-[#002333] mb-2"
              >Numer telefonu</label
